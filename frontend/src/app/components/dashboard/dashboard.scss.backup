      .welcome-message-display {
        @include mix.flex-column(vars.$spacing-lg);
        align-items: center;
        text-align: center;
        padding: vars.$spacing-2xl;

        .welcome-icon {
          font-size: 4rem;
          color: vars.$info-blue;
          animation: gemPulse 3s ease-in-out infinite;
          margin-bottom: vars.$spacing-lg;
        }

        .welcome-title {
          font-family: 'Poppins', sans-serif;
          font-size: 1.5rem;
          font-weight: 700;
          color: white;
          margin: 0 0 vars.$spacing-md 0;
        }

        .welcome-text {
          font-family: 'Inter', sans-serif;
          color: rgba(255, 255, 255, 0.8);
          line-height: 1.6;
          margin: 0;
        }

        .feature-highlights {
          @include mix.flex-column(vars.$spacing-sm);
          margin-top: vars.$spacing-lg;

          .highlight-item {
            @include mix.flex-row(vars.$spacing-sm);
            align-items: center;
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;

