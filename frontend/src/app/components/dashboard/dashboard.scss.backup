@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap');

// ============================================================================
// üß© IMPORTS DE M√ìDULOS ESPECIALIZADOS
// ============================================================================
@import './dashboard.header.scss';         // Header principal con t√≠tulo y ticker
@import './dashboard.converter.scss';      // Sistema de conversi√≥n completo
@import './dashboard.rates-section.scss';  // Mercado de divisas con an√°lisis t√©cnico

// ============================================================================
// üö® ANGULAR MATERIAL GLOBAL OVERRIDES - SIGUIENDO PATR√ìN FAVORITOS
// M√°xima fuerza aplicando estructura de header limpio de favoritos
// ============================================================================
::ng-deep {
  .dashboard-container {
    // ÔøΩ ELIMINAR RECURSIVAMENTE TODOS LOS FONDOS BLANCOS DE MATERIAL
    *, *::before, *::after {
      background: transparent !important;
    }
    
    // üéØ FORZAR COLORES EN FORM FIELDS (PATR√ìN FAVORITOS)
    .mat-mdc-select-value,
    .mat-mdc-select-value-text, 
    .mat-mdc-select-min-line {
      color: white !important;
    }
    
    .mat-mdc-form-field-label,
    .mdc-floating-label,
    .mat-mdc-floating-label,
    mat-label {
      color: vars.$warning-yellow !important;
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important;
    }

    // √çCONOS EN AMARILLO
    .mat-mdc-form-field-icon-suffix,
    .mat-icon,
    mat-icon {
      color: vars.$warning-yellow !important;
    }

    .mat-mdc-select-arrow,
    .mat-mdc-select-arrow svg {
      color: vars.$warning-yellow !important;
      fill: vars.$warning-yellow !important;
    }

    // üÉè CARDS GLOBALES (usando estructura favoritos)
    .mat-mdc-card,
    mat-card {
      @include mix.glass-card-dark();
      margin-bottom: vars.$spacing-2xl !important;
    }

    // üé® HEADER STRUCTURE - COPIADO DE FAVORITOS
    .mat-mdc-card-header,
    mat-card-header {
      @include mix.glass-header();
      display: flex !important;
      align-items: center !important;
      justify-content: space-between !important;
      flex-wrap: wrap !important;
      gap: vars.$spacing-lg !important;

      .mat-mdc-card-title,
      mat-card-title {
        color: white !important;
        font-family: 'Inter', sans-serif !important;
        font-weight: 700 !important;
        font-size: 1.4rem !important;
        margin: 0 !important;
        flex: 1 !important;
        display: flex !important;
        align-items: center !important;

        mat-icon {
          color: vars.$warning-yellow !important;
          margin-right: 0.8rem !important;
          animation: gemPulse 3s ease-in-out infinite !important;
