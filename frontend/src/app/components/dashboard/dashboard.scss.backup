// ============================================================================
// üè† CONTENEDOR PRINCIPAL DEL DASHBOARD
// ============================================================================
.dashboard-container {
  @extend .animate-fade-in;
  background: vars.$gradient-primary;
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
  
  .content-wrapper {
    max-width: 1600px;
    margin: 0 auto;
    padding: vars.$spacing-lg;
    
    // Aplicar animaciones escalonadas
    > * {
      animation: fadeInUp 0.6s ease forwards;
      
      &:nth-child(1) { animation-delay: 0.1s; }
      &:nth-child(2) { animation-delay: 0.2s; }
      &:nth-child(3) { animation-delay: 0.3s; }
      &:nth-child(4) { animation-delay: 0.4s; }
      &:nth-child(5) { animation-delay: 0.5s; }
    }
  }
}

// ============================================================================
// üíé HEADER PRINCIPAL DEL DASHBOARD
// ============================================================================
.dashboard-header {
  background: vars.$gradient-primary;
  color: white;
  padding: vars.$spacing-3xl vars.$spacing-2xl vars.$spacing-xl;
  margin-bottom: vars.$spacing-xl;
  position: relative;
  overflow: hidden;
  
  // Patr√≥n de fondo con efecto diamante
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 30%, vars.$info-blue-10 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, vars.$warning-yellow-10 0%, transparent 50%),
      radial-gradient(circle at 40% 90%, vars.$success-green-10 0%, transparent 50%);
    pointer-events: none;
  }

  .title-container {
    position: relative;
    z-index: 2;
    text-align: center;

    .main-title {
      @include mix.flex-center();
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-family: 'Inter', sans-serif;
      font-weight: 900;
      letter-spacing: -0.05em;
      margin: 0 0 vars.$spacing-lg 0;
      gap: vars.$spacing-md;

      .currency-symbol {
        font-size: 1.2em;
        animation: gemPulse 2s ease-in-out infinite;
        filter: drop-shadow(0 4px 8px rgba(251, 191, 36, 0.4));
      }

      .brand-text {
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 50%, #e2e8f0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .pro-badge {
        background: linear-gradient(135deg, vars.$warning-yellow 0%, #fcd34d 100%);
        color: vars.$slate-900;
        font-size: 0.4em;
        font-weight: 800;
        padding: 0.3em 0.8em;
        border-radius: vars.$radius-full;
        margin-left: vars.$spacing-sm;
        box-shadow: 0 4px 12px rgba(251, 191, 36, 0.4);
        animation: gemPulse 3s ease-in-out infinite;
      }
    }

    .title-tagline {
      @include mix.flex-center();
      gap: vars.$spacing-lg;
      flex-wrap: wrap;

      .tagline-text {
        font-family: 'Poppins', sans-serif;
        font-size: clamp(1rem, 2.5vw, 1.25rem);
        font-weight: 500;
        color: rgba(255, 255, 255, 0.9);
        letter-spacing: 0.02em;
      }

      .live-indicator {
        @include mix.flex-center();
        gap: vars.$spacing-xs;
        background: rgba(16, 185, 129, 0.2);
        border: 1px solid rgba(16, 185, 129, 0.4);
        padding: vars.$spacing-xs vars.$spacing-md;
        border-radius: vars.$radius-full;
        font-size: 0.8rem;
        font-weight: 600;
        color: vars.$success-green;

        .pulse-dot {
          width: 8px;
          height: 8px;
          background: vars.$success-green;
          border-radius: 50%;
          animation: pulse 2s infinite;
        }

        .live-text {
          font-family: 'JetBrains Mono', monospace;
          letter-spacing: 0.1em;
        }
      }
    }
  }
}

// ============================================================================
// üìä MARKET TICKER (SOLO USUARIOS AUTENTICADOS)
// ============================================================================
.market-ticker {
  @include mix.flex-center();
  gap: vars.$spacing-xl;
  margin-top: vars.$spacing-lg;
  padding: vars.$spacing-lg;
  background: rgba(255, 255, 255, 0.05);
  border-radius: vars.$radius-xl;
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);

  .ticker-item {
    @include mix.flex-column(vars.$spacing-xs);
    align-items: center;
    text-align: center;
    min-width: 100px;

    .ticker-pair {
