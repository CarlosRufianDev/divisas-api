    .mat-card,
    .mat-mdc-form-field,
    .mat-form-field,
    .mat-mdc-input-element,
    .mat-input-element,
    .mat-mdc-select-panel,
    .mat-select-panel,
    .mdc-text-field,
    .mat-mdc-text-field-wrapper,
    .mat-mdc-form-field-infix,
    .mat-mdc-form-field-flex {
      background: transparent !important;
      background-color: transparent !important;
    }

    // üíπ SECCI√ìN MERCADO DE DIVISAS - ENHANCED WITH LEGACY ADVANCED FEATURES
    // ‚úÖ ESTILOS ESPEC√çFICOS AHORA MANEJADOS POR M√ìDULOS ESPECIALIZADOS
    // Los estilos detallados de rates-section-improved est√°n en dashboard.rates-section.scss

      // ‚úÖ M√ÅSCARA DE TRANSICI√ìN VISUAL (from legacy)
      &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
          linear-gradient(180deg, 
            rgba(30, 41, 59, 0.2) 0%,
            rgba(30, 41, 59, 0.1) 30%,
            transparent 50%,
            rgba(30, 41, 59, 0.1) 70%,
            rgba(30, 41, 59, 0.2) 100%
          ),
          radial-gradient(circle at 10% 20%, rgba(255, 152, 0, 0.03) 0%, transparent 50%),
          radial-gradient(circle at 90% 80%, vars.$info-blue-03 0%, transparent 50%);
        pointer-events: none;
        z-index: 1;
      }

      // L√≠nea decorativa superior (enhanced from legacy)
      &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #667eea, #764ba2);
