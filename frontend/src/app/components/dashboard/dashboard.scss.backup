        border-radius: 16px 16px 0 0 !important;
        position: relative !important;
        z-index: 2 !important;

        // ‚úÖ L√çNEA DECORATIVA QUE SIGUE LA CURVA DEL HEADER
        &::before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          height: 4px;
          background: linear-gradient(90deg, vars.$primary-blue, vars.$primary-purple);
          border-radius: 16px 16px 0 0;
