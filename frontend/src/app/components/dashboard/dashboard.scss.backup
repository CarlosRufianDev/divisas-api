.analytics-compact {
  margin-bottom: vars.$spacing-xl;

  .stats-grid-horizontal {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: vars.$spacing-lg;

    @include mix.tablet-only {
      grid-template-columns: repeat(2, 1fr);
    }

    @include mix.mobile-only {
      grid-template-columns: 1fr;
    }

    .stat-card-compact {
      @include mix.glass-card();
      padding: vars.$spacing-lg;
      text-align: center;
      transition: vars.$transition-normal;

      &:hover {
        @include mix.hover-lift(-4px, 1.02);
      }

      .stat-icon {
        font-size: 2rem;
        margin-bottom: vars.$spacing-sm;
        animation: gemPulse 3s ease-in-out infinite;

        &.conversions { color: vars.$info-blue; }
        &.volume { color: vars.$success-green; }
        &.pair { color: vars.$warning-yellow; }
        &.alerts { color: vars.$primary-purple; }
      }

      .stat-value {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1.8rem;
        font-weight: 900;
        color: white;
        margin: 0;
      }

      .stat-label {
        font-family: 'Inter', sans-serif;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
