            @include mix.button-base();
            padding: vars.$spacing-sm vars.$spacing-lg;
            border-radius: vars.$radius-md;
            font-weight: 600;

            &.share-btn {
              background: linear-gradient(135deg, vars.$info-blue, vars.$primary-purple);
            }

