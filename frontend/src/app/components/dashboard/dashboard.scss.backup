        background: linear-gradient(180deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0.2) 100%);
      }

      &:hover {
        @include mix.hover-lift(-6px, 1.02);
        
        .currency-flag {
          transform: scale(1.1);
        }
      }

      .rate-header {
        @include mix.flex-between();
        align-items: flex-start;
        margin-bottom: vars.$spacing-lg;

        .currency-info {
          @include mix.flex-row(vars.$spacing-md);
          align-items: center;
          flex: 1;

          .currency-flag {
            font-size: 2.5rem;
            transition: vars.$transition-normal;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
          }

          .currency-details {
            .currency-code {
              font-family: 'JetBrains Mono', monospace;
              font-size: 1.2rem;
              font-weight: 900;
              color: vars.$warning-yellow;
              margin: 0;
              letter-spacing: 0.05em;
            }

            .currency-name {
              font-family: 'Inter', sans-serif;
              font-size: 0.9rem;
              color: rgba(255, 255, 255, 0.8);
              margin: vars.$spacing-xs 0 0 0;
              line-height: 1.3;
            }
          }
        }

        .rate-status {
          text-align: right;

          .base-rate {
            font-family: 'JetBrains Mono', monospace;
            font-size: 1.1rem;
            font-weight: 700;
            color: white;
            margin: 0;
          }

          .rate-change {
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.85rem;
            font-weight: 600;
            margin: vars.$spacing-xs 0 0 0;

            &.positive { color: vars.$success-green; }
            &.negative { color: vars.$error-red; }
            &.neutral { color: rgba(255, 255, 255, 0.6); }
          }
        }
      }

      .rate-metrics {
        @include mix.flex-between();
        margin-bottom: vars.$spacing-lg;
        padding: vars.$spacing-md;
        background: rgba(255, 255, 255, 0.03);
        border-radius: vars.$radius-sm;
        border: 1px solid rgba(255, 255, 255, 0.08);

        .metric {
          @include mix.flex-column(vars.$spacing-xs);
          align-items: center;
          text-align: center;
          flex: 1;

          .metric-label {
            font-family: 'Inter', sans-serif;
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-weight: 500;
          }

          .metric-value {
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.9rem;
            font-weight: 700;
            color: white;

            &.high { color: vars.$error-red; }
            &.medium { color: vars.$warning-yellow; }
            &.low { color: vars.$success-green; }
          }

          // Separadores entre m√©tricas
          &:not(:last-child)::after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 1px;
            height: 60%;
            background: rgba(255, 255, 255, 0.1);
          }

          &:not(:last-child) {
            position: relative;
            padding-right: vars.$spacing-md;
            margin-right: vars.$spacing-md;
          }
        }
      }

      .rate-actions {
        @include mix.flex-between();
        gap: vars.$spacing-sm;

        button {
          @include mix.button-base();
          flex: 1;
          padding: vars.$spacing-sm vars.$spacing-md;
          font-size: 0.85rem;
          font-weight: 600;
          border-radius: vars.$radius-sm;

          &.base-action {
            background: rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.6);
            cursor: not-allowed;

            &:hover {
              transform: none;
              box-shadow: none;
            }
          }

          &.details-action {
            background: linear-gradient(135deg, vars.$info-blue, vars.$primary-purple);
            
            &.premium-locked {
              background: linear-gradient(135deg, vars.$warning-orange, #ea580c);
            }
          }

          mat-icon {
            margin-right: vars.$spacing-xs;
            font-size: 1.1rem;
          }
        }
      }

      // Estado especial para usuarios no autenticados
      &.limited-access {
        .rate-metrics {
          opacity: 0.6;
          position: relative;

          &::after {
            content: 'üîí';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 1.5rem;
            background: rgba(0, 0, 0, 0.8);
            border-radius: 50%;
            padding: vars.$spacing-xs;
          }
        }
      }
    }
  }

  // Estado sin resultados de filtro
  .no-filter-results {
